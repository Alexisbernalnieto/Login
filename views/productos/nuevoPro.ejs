<div class="container">
    <form action="/producto/nuevoproducto" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>Nuevo Producto<h1>
            </div>
            <div class="card-body">
                <input type="form-control mb-3" type="text"name="nombre" id="nombre" placeholder="Nombre" autofocus>
                <input type="form-control mb-3" type="text"name="cantidad" id="cantidad" placeholder="Cantidad"> 
                <input type="form-control mb-3" type="text"name="precio" id="precio" placeholder="Precio" >
                <input class="form-control mb-3" type="file"name="foto" id="foto" placeholder="Selecciona tu foto" >

            </div>
            <div class="card-footer">
                 <button class="btn btn-primary mb-3" type="submit">Guardar Producto</button>
                    <button class="btn btn-secondary" type="reset">Limpia Campos</button>  
            </div>
        </div>
    </form>
</div>






